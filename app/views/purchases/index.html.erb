<p><%= link_to 'Record purchase', new_purchase_path %> | <%= link_to 'Lemonade types', lemonade_types_path %></p>

<table class="table table-striped">
  <thead>
    <th>Purchase ID</th>
    <th>Purchase date/time</th>
    <th>Lemonade Type</th>
    <th>Quantity</th>
    <th>Sale total</th>
    <th></th>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.id %></td>
        <td><%= purchase.created_at.to_formatted_s(:short) %></td>
        <td><%= purchase.lemonade_type.label %></td>
        <td><%= purchase.quantity %></td>
        <td><%= number_to_currency(purchase.sale_total) %></td>
        <td><%= link_to 'Delete', purchase_path(purchase), method: :delete, data: { confirm: "Are you sure you want to delete this purchase?" } %></td>
      </tr>
      <% total += purchase.sale_total %>
    <% end %>
    <tr>
      <td colspan="4">
        <strong>
          Total sales
        </strong>
      </td>
      <td>
        <strong>
          <%= number_to_currency(total) %>
        </strong>
      </td>
      <td></td>
    </tr>
  </tbody>
</table>
